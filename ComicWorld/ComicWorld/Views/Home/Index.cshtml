@{
    ViewData["Title"] = "Home Page";
}
<body style="background-color: #303030">
    <div class="text-center" style="padding-top: 30px;">
        <h1 class="display-2 text-white" >Welcome to Comic World!</h1>
        <h2 class="display-4 text-white">The best place to looking for comics in the WORLD!</h2>
    </div>
    <div class="text-center" style="padding-top: 60px;">
        <div class="ComicLogo">
            <figure>
                <a class="nav-link" asp-area="" asp-controller="Comic" asp-action="GetComicFromMarvel"><img src="~/Images/marvel.jpg" alt="Marvel" /></a>
            </figure>
        </div>
        <div class="ComicLogo">
            <figure>
                <a class="nav-link" asp-area="" asp-controller="Comic" asp-action="GetComicFromDC"><img src="~/Images/dc.jpg" alt="DC" /></a>
            </figure>
        </div>
        <div class="ComicLogo">
            <figure>
                <a class="nav-link" asp-area="" asp-controller="Comic" asp-action="GetComicFromImage"><img src="~/Images/image.jpg" alt="Image" /></a>
            </figure>
        </div>
        <div class="ComicLogo">
            <figure>
                <a class="nav-link" asp-area="" asp-controller="Comic" asp-action="GetComicFromDarkHorse"><img src="~/Images/DarkHorse.jpg" alt="Dark Horse" /></a>
            </figure>
        </div>
    </div>
</body>

